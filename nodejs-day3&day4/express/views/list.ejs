<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/style.css" media="screen" title="no title">
  <title>List</title>
</head>
<body>
  <%- include header %>
  <table>
    <colgroup>
      <col style="width: 10%"></col>
      <col style="width: 40%"></col>
      <col></col>
    </colgroup>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>内容</th>
    </tr>
    <% res.forEach(function(item, index){ %>
      <tr>
        <td><%= (index+1) %></td>
        <td><a href="./detail?uid=<%= item.uid %>"><%- item.title %></a></td>
        <td><%- item.content %></td>
      </tr>
    <% }) %>
    <tr>
      <td colspan="3">
        <a href="./list?pageNo=1">首页</a>
        <a href="./list?pageNo=<%= pageNo > 1 ? parseInt(pageNo)-1 : 1 %>">上一页</a>
        <a href="./list?pageNo=<%= pageNo < totalPage ? parseInt(pageNo) + 1 : totalPage%>">下一页</a>
        <a href="./list?pageNo=<%= totalPage %>">尾页</a>
        <%= pageNo %>/<%= totalPage %>
        共<%= count %>条记录
      </td>
    </tr>
  </table>
</body>
</html>
